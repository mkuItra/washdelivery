@using WashDelivery.Domain.Constants
@model string

@{
    System.Diagnostics.Debug.WriteLine($"Role received in _RoleBadgePartial: '{Model}'");
    
    var roleClass = Model switch
    {
        Roles.Admin => "bg-red-100 text-red-700 ring-red-600/20",
        Roles.LaundryManager => "bg-emerald-100 text-emerald-700 ring-emerald-600/20",
        Roles.LaundryWorker => "bg-green-100 text-green-700 ring-green-600/20",
        Roles.Courier => "bg-orange-100 text-orange-700 ring-orange-600/20",
        Roles.Customer => "bg-blue-100 text-blue-700 ring-blue-600/20",
        _ => "bg-gray-100 text-gray-700 ring-gray-600/20"
    };
    
    System.Diagnostics.Debug.WriteLine($"Selected class: '{roleClass}'");
}

<span class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium ring-1 ring-inset @roleClass">
    @RoleDisplayNames.GetDisplayName(Model)
</span> 