@{
    ViewData["Title"] = "Panel administratora";
}

<div class="min-h-full">
    <div class="py-10">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <div class="space-y-10">
                <!-- Status section -->
                <div class="bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl p-6">
                    <div class="flex items-center justify-between">
                        <div>
                            <h2 class="text-base font-semibold leading-7 text-gray-900">Panel administratora</h2>
                            <p class="mt-1 text-sm text-gray-500">
                                Zarządzaj systemem, użytkownikami i pralniami.
                            </p>
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <div class="mt-6 border-t border-gray-100 pt-6">
                        <h3 class="text-base font-semibold leading-7 text-gray-900">Szybkie akcje</h3>
                        <div class="mt-4 flex flex-wrap gap-4">
                            <a asp-controller="Admin" asp-action="CreateUser"
                               class="inline-flex items-center gap-x-2 rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                                <svg class="-ml-0.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                    <path d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" />
                                </svg>
                                Dodaj użytkownika
                            </a>
                        </div>
                    </div>

                    <!-- Management Sections -->
                    <div class="mt-6">
                        <h3 class="text-base font-semibold leading-7 text-gray-900">Zarządzanie</h3>
                        <dl class="mt-6 grid grid-cols-1 gap-4 sm:grid-cols-3">
                            <!-- Users Section -->
                            <div class="relative overflow-hidden rounded-lg bg-white shadow">
                                <dt>
                                    <div class="z-10 rounded-md bg-indigo-500 p-3">
                                        <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                                        </svg>
                                    </div>
                                </dt>
                                <dd class="flex items-baseline">
                                    <div class="inset-x-0 bottom-0 bg-gray-50 px-4 py-4 sm:px-6 w-full">
                                        <div class="text-sm">
                                            <a asp-controller="Admin" asp-action="Users" class="font-medium text-indigo-600 hover:text-indigo-500">
                                                Zarządzaj użytkownikami
                                                <span class="sr-only"> użytkownikami</span>
                                                <span aria-hidden="true"> &rarr;</span>
                                            </a>
                                        </div>
                                    </div>
                                </dd>
                            </div>

                            <!-- Laundries Section -->
                            <div class="relative overflow-hidden rounded-lg bg-white shadow">
                                <dt>
                                    <div class="z-10 rounded-md bg-indigo-500 p-3">
                                        <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                                        </svg>
                                    </div>
                                </dt>
                                <dd class="flex items-baseline">
                                    <div class="inset-x-0 bottom-0 bg-gray-50 px-4 py-4 sm:px-6 w-full">
                                        <div class="text-sm">
                                            <a asp-controller="Laundry" asp-action="Index" class="font-medium text-indigo-600 hover:text-indigo-500">
                                                Zarządzaj pralniami
                                                <span class="sr-only"> pralniami</span>
                                                <span aria-hidden="true"> &rarr;</span>
                                            </a>
                                        </div>
                                    </div>
                                </dd>
                            </div>
                        </dl>
                    </div>

                    <!-- System Statistics -->
                    <div class="mt-6 border-t border-gray-100 pt-6">
                        <h3 class="text-base font-semibold leading-7 text-gray-900">Statystyki systemu</h3>
                        <dl class="mt-6 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4">
                            <div class="relative overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
                                <dt class="truncate text-sm font-medium text-gray-500">Aktywne pralnie</dt>
                                <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900">@ViewBag.ActiveLaundries</dd>
                            </div>
                            <div class="relative overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
                                <dt class="truncate text-sm font-medium text-gray-500">Aktywni kurierzy</dt>
                                <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900">@ViewBag.ActiveCouriers</dd>
                            </div>
                            <div class="relative overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
                                <dt class="truncate text-sm font-medium text-gray-500">Dzisiejsze zamówienia</dt>
                                <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900">@ViewBag.TodayOrders</dd>
                            </div>
                            <div class="relative overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
                                <dt class="truncate text-sm font-medium text-gray-500">Aktywni użytkownicy</dt>
                                <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900">@ViewBag.ActiveUsers</dd>
                            </div>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 