@model WashDelivery.Application.DTOs.Common.AddressDto

<form asp-action="@(Model?.Id == null ? "AddAddress" : "UpdateAddress")" asp-controller="Panel" method="post" class="p-6">
    @Html.AntiForgeryToken()
    @if (Model?.Id != null)
    {
        <input type="hidden" asp-for="Id" />
    }
    
    <div class="space-y-4">
        <div>
            <label asp-for="Name" class="block text-sm font-medium text-gray-700">Nazwa adresu</label>
            <input asp-for="Name" type="text" required
                   class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
                   placeholder="np. Dom, Praca">
            <span asp-validation-for="Name" class="text-sm text-red-600"></span>
        </div>
        
        <div>
            <label asp-for="Street" class="block text-sm font-medium text-gray-700">Ulica</label>
            <input asp-for="Street" type="text" required
                   class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
            <span asp-validation-for="Street" class="text-sm text-red-600"></span>
        </div>
        
        <div class="grid grid-cols-2 gap-4">
            <div>
                <label asp-for="BuildingNumber" class="block text-sm font-medium text-gray-700">Nr budynku</label>
                <input asp-for="BuildingNumber" type="text" required
                       class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
                <span asp-validation-for="BuildingNumber" class="text-sm text-red-600"></span>
            </div>
            <div>
                <label asp-for="ApartmentNumber" class="block text-sm font-medium text-gray-700">Nr mieszkania</label>
                <input asp-for="ApartmentNumber" type="text"
                       class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
                <span asp-validation-for="ApartmentNumber" class="text-sm text-red-600"></span>
            </div>
        </div>
        
        <div class="grid grid-cols-2 gap-4">
            <div>
                <label asp-for="PostalCode" class="block text-sm font-medium text-gray-700">Kod pocztowy</label>
                <input asp-for="PostalCode" type="text" required
                       class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
                <span asp-validation-for="PostalCode" class="text-sm text-red-600"></span>
            </div>
            <div>
                <label asp-for="City" class="block text-sm font-medium text-gray-700">Miasto</label>
                <input asp-for="City" type="text" required
                       class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
                <span asp-validation-for="City" class="text-sm text-red-600"></span>
            </div>
        </div>
        
        <div>
            <label asp-for="AdditionalInstructions" class="block text-sm font-medium text-gray-700">Dodatkowe instrukcje</label>
            <textarea asp-for="AdditionalInstructions"
                      class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
                      rows="2"></textarea>
            <span asp-validation-for="AdditionalInstructions" class="text-sm text-red-600"></span>
        </div>
        
        <div class="flex items-center">
            <input asp-for="IsDefault" type="checkbox"
                   class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500">
            <label asp-for="IsDefault" class="ml-2 block text-sm text-gray-900">Ustaw jako domy≈õlny adres</label>
        </div>
    </div>
    
    <div class="mt-6 flex justify-end space-x-3">
        <a href="@Url.Action("Settings", "Panel")"
           class="rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50">
            Anuluj
        </a>
        <button type="submit"
                class="rounded-md bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-500">
            Zapisz
        </button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 