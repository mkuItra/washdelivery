@model WashDelivery.Web.ViewModels.Auth.CustomerRegistrationViewModel
@{
    ViewData["Title"] = "Rejestracja klienta";
}

<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
        <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">
            Zarejestruj się jako klient
        </h2>
    </div>

    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
        <form asp-action="RegisterCustomer" method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-500"></div>

            <div>
                <label asp-for="Email" class="block text-sm font-medium leading-6 text-gray-900">Email</label>
                <div class="mt-2">
                    <input asp-for="Email" type="email" required
                           class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                    <span asp-validation-for="Email" class="text-sm text-red-500"></span>
                </div>
            </div>

            <div>
                <label asp-for="FirstName" class="block text-sm font-medium leading-6 text-gray-900">Imię</label>
                <div class="mt-2">
                    <input asp-for="FirstName" type="text" required
                           class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                    <span asp-validation-for="FirstName" class="text-sm text-red-500"></span>
                </div>
            </div>

            <div>
                <label asp-for="LastName" class="block text-sm font-medium leading-6 text-gray-900">Nazwisko</label>
                <div class="mt-2">
                    <input asp-for="LastName" type="text" required
                           class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                    <span asp-validation-for="LastName" class="text-sm text-red-500"></span>
                </div>
            </div>

            <div>
                <label asp-for="PhoneNumber" class="block text-sm font-medium leading-6 text-gray-900">Telefon</label>
                <div class="mt-2">
                    <input asp-for="PhoneNumber" type="tel" required
                           class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                    <span asp-validation-for="PhoneNumber" class="text-sm text-red-500"></span>
                </div>
            </div>

            <div>
                <label asp-for="Password" class="block text-sm font-medium leading-6 text-gray-900">Hasło</label>
                <div class="mt-2">
                    <input asp-for="Password" type="password" required
                           class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                    <span asp-validation-for="Password" class="text-sm text-red-500"></span>
                </div>
            </div>

            <div>
                <label asp-for="ConfirmPassword" class="block text-sm font-medium leading-6 text-gray-900">Potwierdź hasło</label>
                <div class="mt-2">
                    <input asp-for="ConfirmPassword" type="password" required
                           class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                    <span asp-validation-for="ConfirmPassword" class="text-sm text-red-500"></span>
                </div>
            </div>

            <div>
                <button type="submit"
                        class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                    Zarejestruj
                </button>
            </div>
        </form>

        <p class="mt-10 text-center text-sm text-gray-500">
            Masz już konto?
            <a asp-action="Login" class="font-semibold leading-6 text-indigo-600 hover:text-indigo-500">Zaloguj się</a>
        </p>
    </div>
</div> 